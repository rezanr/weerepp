                    <a asp-area="" asp-controller="Sony" asp-action="SonyXperia_Z">
                        <div class="img-box">
                            @if (Model.Images.ElementAt(22).ID == 23)
                            {
                                <div class="img"><img src="~/img/GlaobalImages/@Model.Images.ElementAt(22).ImageName" alt=""></div>
