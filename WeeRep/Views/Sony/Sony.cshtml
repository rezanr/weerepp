            </div>

            <div class=" col-lg-3 col-md-5 d-flex align-items-stretch mt-4 repararion-content" data-aos="zoom-in" data-aos-delay="100">
                <div class="card  text-center">

                    <a asp-area="" asp-controller="Sony" asp-action="SonyXperia_X">
                        <div class="img-box">
                            @if (Model.Images.ElementAt(23).ID == 24)
