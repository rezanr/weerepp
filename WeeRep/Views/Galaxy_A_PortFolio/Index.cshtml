@model IEnumerable<Core.Entities.Samsung.Galaxy_A_Serien>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_PortfolioLayout.cshtml";
}

<div class="container">
    <div class="section-title">
        <h2>Home</h2>
        <p> Galaxy A</p>
    </div>
    <p>
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneName)
                </td>
                <td class="d-flex justify-content-center">
                    <img src="~/img/Samsung/Galaxy_A/@item.ImageName" class="img-thumbnail Portfolio-img" alt="@item.ImageName" />
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.ID"><i class="fas fa-edit"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.ID"><i class="fas fa-eye"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.ID"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
