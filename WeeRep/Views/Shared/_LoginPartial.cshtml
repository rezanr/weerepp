@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager




@if (SignInManager.IsSignedIn(User))
{
    
    <li><a id="manage" class="nav-link scrollto" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a> </li>
        <li>
            <form id="logoutForm" class="nav-link scrollto" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class=" mr-5 btn text-danger">Logout</button>
            </form>
        </li>
    <li><a class="nav-link " id="register" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
}
else
{
    <li><a class="nav-link scrollto" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
}

